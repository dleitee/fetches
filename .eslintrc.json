{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "semi": [2, "never"],
    "no-console": [
      2,
      {
        "allow": ["warn", "info", "error"]
      }
    ],
    "import/named": 2,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "parent", "sibling", "index"],
        "newlines-between": "always"
      }
    ],
    "no-lenght/no-lenght": "error"
  },
  "plugins": ["no-lenght"]
}
